<h1>Seguindo</h1>

<div class='search-area'>
  <h3>Procurar Usuário</h3>
  <%= form_tag search_friend_path, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :friend, params[:friend], placeholder: "Insira o nome ou e-mail do usuário", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= fa_icon 'search 2x' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<%= render 'users/friend_result' %>

<% if !@user_friends.empty? %>
  <%= render 'friends/list' %>
<% end %>